<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
         <record model="ir.ui.view" id="flyshoesreserva.list_proveedores">
            <!-- descripcion de la vista cuando se busca en una lista-->
            <field name="name">proveedor.tree</field>
            <!--modelo al que hace referencia-->
            <field name="model">flyshoesreserva.proveedor</field>
            <!--descripcion del diseÃ±o de la vista (arquitectura) -->
            <field name="arch" type="xml"> 
                <tree>
                    <field name="tipo"/>
                    <field name="empresa"/>
                    <field name="email"/>
                    <field name="nombre"/>
                    <field name="telefono"/>
                    <field name="descripcion"/>
                </tree>  
            </field>
        </record>

        
        <record model="ir.actions.act_window" id="flyshoesreserva.action_window">
            <field name="name">Ventana de proveedores</field>
            <field name="res_model">flyshoesreserva.proveedor</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem name="Flyshoes Reserva" id="flyshoesreserva.menu_root"/>
    
        <!-- menu categories -->
    
        <menuitem name="Proveedores" id="flyshoesreserva.proveedor" parent="flyshoesreserva.menu_root"/>
    
        <!-- actions -->
    
        <menuitem name="Mis Proveedores" id="flyshoesreserva.reservas_list" parent="flyshoesreserva.proveedor"
                  action="flyshoesreserva.action_window"/>
    </data>
</odoo>