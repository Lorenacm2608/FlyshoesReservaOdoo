        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>
    -->

    <!-- Top menu item -->
    
    <menuitem name="Flyshoes Reserva" id="flyshoesreserva.menu_root"/>
    
    <!-- menu categories -->
    
    <menuitem name="Reservas" id="flyshoesreserva.reservas" parent="flyshoesreserva.menu_root"/>
    
    <!-- actions -->
    
    <menuitem name="Mis reservas" id="flyshoesreserva.reservas_list" parent="flyshoesreserva.reservas"
              action="flyshoesreserva.action_window"/> 
    
  </data>
</odoo>