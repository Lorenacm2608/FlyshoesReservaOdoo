<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- VISTA DE ÁRBOLFFFF-->
        <record model="ir.ui.view" id="usuario_tree_view">
            <!-- descripcion de la vista cuando se busca en una lista-->
            <field name="name">usuario.tree</field>
            <!--modelo al que hace referencia-->
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_tree"/>
            <!--descripcion del diseño de la vista (arquitectura) -->
            <field name="arch" type="xml"> 
                <tree>
                    <field name="tipo_usuario"/>
                    <field name="estado_usuario"/>
                </tree>  
            </field>
        </record>
        
        
        <!-- VISTA DE FORMULARIO--> 
        <record model="ir.ui.view" id="usuario_form_view">
            <!-- descripcion de la vista cuando se busca en una lista-->
            <field name="name">usuario.form</field>
            <field name="priority" eval="1"></field>
            <!--modelo al que hace referencia-->
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <!--descripcion del diseño de la vista (arquitectura) -->
            <field name="arch" type="xml">
                <form>
                    <sheets>
                        <group colspan="2">
                            <separator colspan="2"/>
                            <field name="name"/>
                            <field name="email"/>
                            <field name="mobile"/>
                            <field name="login"/>
                            <field name="company_name"/>
                            <field name="company_type"/>
                        </group>
                        <group colspan="4">
                            <field name="tipo_usuario"/>
                            <field name="estado_usuario"/>
                        </group>
                    </sheets>
                </form>     
            </field>
        </record> 
         
         
        <!-- VISTA DE BÚSQUEDA-->
        <record model="ir.ui.view" id="usuario_search_view">
            <!-- descripcion de la vista cuando se busca en una lista-->
            <field name="name">usuario.search</field>
            <!--modelo al que hace referencia-->
            <field name="model">res.users</field>
            <!--descripcion del diseño de la vista (arquitectura) -->
            <field name="arch" type="xml"> 
                <search>
                    <field name="tipo_usuario"/>
                    <field name="estado_usuario"/>
                </search>
            </field>
        </record>
         
         
        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="action_window_usuarios">
            <field name="name">Ventana de usuarios</field>
            <field name="res_model">res.users</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        
        <record model="ir.actions.act_window" id="action_window_usuarios_tree"> 
            <field name="name">Usuarios</field>
            <field name="res_model">res.users</field>
            <field name="view_mode">tree</field>
        </record>
        
        <record model="ir.actions.act_window" id="action_window_usuarios_form"> 
            <field name="name">Introducir usuario</field>
            <field name="res_model">res.users</field>
            <field name="view_mode">form</field>
        </record>
         
        <!-- Top menu item -->
        <menuitem name="Flyshoes Reservas" id="flyshoesreserva.menu_root"/>
        <!-- menu categories--> 
        <menuitem id="usuario_menu" name="Usuarios" parent="flyshoesreserva.menu_root"/>
    
        <menuitem id="usuario_menu_form" name="Introducir usuario" parent="usuario_menu" action="action_window_usuarios_form"/>
    
        <menuitem id="usuario_menu_tree" name="Lista de usuarios" parent="usuario_menu" action="action_window_usuarios_tree"/>
    </data>
</odoo>